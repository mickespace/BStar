<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="icon" href="/Content/images/bstar_icon.png" type="image/gif" />
    <meta name="keywords" content="index">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="@Url.Content("~/assets/css/amazeui.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/assets/css/admin.css")" rel="stylesheet" />
    <script src="@Url.Content("~/assets/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/js/amazeui.min.js")"></script>
</head>
<body>
    <header class="am-topbar admin-header">
        <div class="am-topbar-brand">
            <strong>恒盛市政园林</strong> <small>后台管理</small>
        </div>
        <button class="am-topbar-btn am-topbar-toggle am-btn am-btn-sm am-btn-success am-show-sm-only" data-am-collapse="{target: '#topbar-collapse'}"><span class="am-sr-only">导航切换</span> <span class="am-icon-bars"></span></button>
        <div class="am-collapse am-topbar-collapse" id="topbar-collapse">
            <ul class="am-nav am-nav-pills am-topbar-nav am-topbar-right admin-header-list">

                <li class="am-dropdown" data-am-dropdown>
                    <a class="am-dropdown-toggle" data-am-dropdown-toggle href="javascript:;">
                        <span class="am-icon-users"></span> 管理员 <span class="am-icon-caret-down"></span>
                    </a>
                    <ul class="am-dropdown-content">
                        <li><a href="@Url.Action("LogOff", "Account")"><span class="am-icon-power-off"></span> 退出</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </header>
    <section class="container-wrapper">
        <div class="am-cf admin-main">
            <!-- sidebar start -->
            <div class="admin-sidebar am-offcanvas" id="admin-offcanvas">
                <div class="am-offcanvas-bar admin-offcanvas-bar">
                    <ul class="am-list admin-sidebar-list">
                        <li><a href="@Url.Action("Index", "Home")"><span class="am-icon-home"></span> 管理首页</a></li>
                        <!--<li><a href="@Url.Action("Query", "Account")"><span class="am-icon-user"></span> 用户管理</a></li>-->
                        <li class="admin-parent">
                            <a class="am-cf" data-am-collapse="{target: '#BannerMenu'}"><span class="am-icon-pencil-square-o"></span> 图片管理 <span class="am-icon-angle-right am-fr am-margin-right"></span></a>
                            <ul class="am-list am-collapse admin-sidebar-sub" id="BannerMenu"></ul>
                        </li>
                        <li class="admin-parent">
                            <a class="am-cf" data-am-collapse="{target: '#NewsMenu'}"><span class="am-icon-pencil-square-o"></span> 新闻管理 <span class="am-icon-angle-right am-fr am-margin-right"></span></a>
                            <ul class="am-list am-collapse admin-sidebar-sub" id="NewsMenu"></ul>
                        </li>
                        <li class="admin-parent">
                            <a class="am-cf" data-am-collapse="{target: '#ProductMenu'}"><span class="am-icon-pencil-square-o"></span> 工程案例管理 <span class="am-icon-angle-right am-fr am-margin-right"></span></a>
                            <ul class="am-list am-collapse admin-sidebar-sub" id="ProductMenu"></ul>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- sidebar end -->
            <!-- content start -->
            <section class="container">
                @RenderBody()
            </section>
            <!-- content end -->
        </div>
    </section>
    <a class="am-icon-btn am-icon-th-list am-show-sm-only admin-menu" data-am-offcanvas="{target: '#admin-offcanvas'}">
    </a>
    <section class="global-padding-horization">
        <section class="bstar-home-footer-bottom-copy ">Copyright &copy;2017 南昌恒盛市政园林有限公司 All Rights Reserved &nbsp;&nbsp;&nbsp;赣ICP备：17003461号</section>
    </section>
</body>
</html>
<script type="text/javascript">
    $('#BannerMenu').load('@Url.Action("NavMenu", "Banner")');
    $('#ProductMenu').load('@Url.Action("NavMenu", "Product")');
    $('#NewsMenu').load('@Url.Action("NavMenu", "News")');
</script>