@model WallE.Platform.Models.LogOnModel
@{
    ViewBag.Title = "用户登录";
    Layout = "../Shared/_LoginLayout.cshtml";
}

<section class="bstar-admin-header"></section>
<section class="bstar-admin-body ">
    <section class="bstar-amdin-login-margin">
        <section class="bstar-admin-login-layout">

            <section class="bstar-admin-login-title">恒盛市政园林-管理系统</section>
            @using (@Html.BeginForm("LogOn", "Account", FormMethod.Post))
            {
                <div class="am-input-group am-input-group-sm  bstar-admin-login-input">
                    <span class="am-input-group-btn">
                        <button class="am-btn am-btn-default" type="button"><span class="am-icon-user">&nbsp;</span> </button>
                    </span>
                    @Html.TextBoxFor(t => t.UserName, new { tabIndex = 1, @class = "am-form-field", placeholder = "输入您的帐号" })
                </div>
                <div class="am-input-group am-input-group-sm bstar-admin-login-input">
                    <span class="am-input-group-btn">
                        <button class="am-btn am-btn-default" type="button"><span class="am-icon-keyboard-o"></span> </button>
                    </span>
                    @Html.PasswordFor(t => t.Password, new { tabIndex = 2, @class = "am-form-field", placeholder = "输入您的密码" })
                </div>
                <section class="bstar-admin-login-remember">
                    @Html.CheckBoxFor(t => t.RememberMe, new
                    {
                        tabIndex = 3,
                        style = "vertical-align: middle;"
                    })
                    <span style="vertical-align: middle">记住密码？</span>
                </section>
                <section class="bstar-admin-login-submit">
                    <button type="submit" class="am-btn am-btn-secondary bstar-admin-login-submit-button" tabindex="4">登录</button>
                    <button type="button" class="am-btn am-btn-success am-align-right bstar-admin-login-submit-button" tabindex="5">注册</button>
                </section>
            }
            @if (Model.Tip != null)
            {
                <section class="bstar-admin-login-tip">
                    @Model.Tip
                </section>
            }
        </section>
    </section>
</section>
<section class="bstar-admin-footer"></section>
